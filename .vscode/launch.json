{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug GitHub MCP Server",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp_github.server",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "MCP_PORT": "4001",
                "PYTHONPATH": "${workspaceFolder}"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        {
